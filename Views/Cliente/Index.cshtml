@*@model IEnumerable<FacturacionWeb.Models.Cliente>*@

@{
    ViewBag.Title = "Clientes";
}

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Listado de @ViewBag.Title</h3>

            </div>
        </div>
    </div>
    <section class="section">
        <div class="card">
            <div class="card-header">
                Lista de Clientes
                <div class="float-end">
                    <a data-bs-toggle="modal" data-bs-target="#exampleModalCenter" class="btn btn-primary user-img d-flex align-items-center">
                        <i class="bi bi-person-plus-fill"></i>
                        <span> &emsp; Agregar </span>
                    </a>
                </div>
            </div>


            <div class="card-body">
                <table class="table table-striped table" id="table1">
                    <thead>
                        <tr>
                            <th>Cédula/Ruc</th>
                            <th>Nombres</th>
                            <th>Apellidos</th>
                            <th>Teléfono</th>
                            <th>Dirección</th>
                            <th>Estado</th>
                            @*<th>Opción</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @*@{
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.CedRuc</td>
                                        <td>@item.Nombres</td>
                                        <td>@item.Apellidos</td>
                                        <td>@item.Telefono</td>
                                        <td>@item.Direccion</td>
                                        <td>
                                            @if (item.Estado == 1)
                                            {
                                                <span class="badge bg-info">Activo</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactivo</span>
                                            }

                                        </td>
                                        <td class="text-center"> <i class="bi bi-pencil-square"></i> </td>
                                    </tr>
                                }
                            }*@

                    </tbody>
                </table>
            </div>
        </div>

    </section>
</div>


@* Modal *@
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
     aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-centered modal-dialog-scrollable"
         role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h5 class="modal-title " id="exampleModalCenterTitle">
                    Cliente
                </h5>
                <button type="button" class="close" data-bs-dismiss="modal"
                        aria-label="Close">
                    <i data-feather="x"></i>
                </button>
            </div>

            <div class="modal-body">

                <div class="form-group position-relative has-icon-left">
                    <input id="txtCed" type="text" placeholder="Cédula/RUC"
                           class="form-control">
                    <div class="form-control-icon">
                        <i class="bi bi-person-badge"></i>
                    </div>
                </div>

                <div class="form-group position-relative has-icon-left">
                    <input id="txtNom" type="text" placeholder="Nombres"
                           class="form-control">
                    <div class="form-control-icon">
                        <i class="bi bi-person"></i>
                    </div>
                </div>
                <div class="form-group position-relative has-icon-left">
                    <input id="txtApe" type="text" placeholder="Apellidos"
                           class="form-control">
                    <div class="form-control-icon">
                        <i class="bi bi-person"></i>
                    </div>
                </div>
                <div class="form-group position-relative has-icon-left">
                    <input id="txtTel" type="number" placeholder="Teléfono"
                           class="form-control">
                    <div class="form-control-icon">
                        <i class="bi bi-telephone-fill"></i>
                    </div>
                </div>
                <div class="form-group position-relative has-icon-left">
                    <input id="txtDir" type="text" placeholder="Dirección"
                           class="form-control">
                    <div class="form-control-icon">
                        <i class="bi bi-house-fill"></i>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger"
                        data-bs-dismiss="modal">
                    <i class="bx bx-x d-block d-sm-none"></i>
                    <span class="d-none d-sm-block">Cerrar</span>
                </button>
                <button type="button"  onclick="GuardarCliente()" class="btn btn-success ml-1">
                    <i class="bx bx-check d-block d-sm-none"></i>
                    <span class="d-none d-sm-block">Guardar</span>
                </button>
            </div>
        </div>
    </div>
</div>
@* Fin Modal *@
<script>
    // Jquery Datatable
    let table = $("#table1").DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
        },
        data :[],
        columns: [
            { data: "CedRuc" },
            { data: "Nombres" },
            { data: "Apellidos" },
            { data: "Telefono" },
            { data: "Direccion" },
        ], columnDefs: [
            {
                "targets": 5,
                "data": null,
                "render": function (data, type, row) {
                    if (data.Estado == 1) {
                        return `<span class="badge bg-info">Activo</span>`;
                    }
                    return `<span class="badge bg-danger">Inactivo</span>`
                }

            }
            //{
            //    "targets": 6,
            //    "data": null,
            //    "className": "text-center",
            //    "render": function (data, type, row) {
            //        return `<button class="btn"> <i class="bi bi-pencil-square"></i> </button>`
            //    }

            //}
        ]
    });

    $(document).ready(function() {
        CargarDatosTabla();
    });

    function CargarDatosTabla() {
        $.ajax({
            method: 'POST',
            url: "@Url.Content("~/Cliente/ListaClientes")",
            dataType: 'json',
            success: function (data) {
                if (data.Status != 200) {
                    alertMessage(data.Error, "Error Listado Clientes", "error");
                } else {
                    table.clear().draw();
                    table.rows.add(data.Data).draw();

                }
            },
            error: function (err) {
                alertMessage("Error", "Error Listado Clientes", "error");
                console.log(err.fail());
            }

        });
    }

    function GuardarCliente() {
        var ced = $("#txtCed").val();
        if (ced == '') {
            toastMessage("Ingrese la Cédula o RUC");
            $("#txtCed").focus();
            return;
        }
        var nom = $("#txtNom").val();
        if (nom == '') {
            $("#txtNom").focus();
            toastMessage("Ingrese el Nombre");
            return;
        }
        var ape = $("#txtApe").val();
        if (ape == '') {

            toastMessage("Ingrese el Apellido");
            $("#txtApe").focus();
            return;
        }
        var tel = $("#txtTel").val();
        if (tel == '') {
            toastMessage("Ingrese el Teléfono");
            $("#txtTel").focus();
            return;
        }
        var dir = $("#txtDir").val();
        if (dir == '') {
            toastMessage("Ingrese la Dirección");
            $("#txtDir").focus();
            return;
        }

        $.ajax({
            method: 'POST',
            url: "@Url.Content("~/Cliente/GuardarCliente")",
            dataType: 'json',
            data: {
                "ced": ced,
                "nom": nom,
                "ape": ape,
                "tel": tel,
                "dir": dir
            },
            success: function (data) {
                if (data.Status != 200) {
                    alertMessage(data.Error, "Error Al Guardar Cliente", "error");
                } else {
                    MessageSucces("Los datos Fueron Guardados");
                    CargarDatosTabla();
                    $("#exampleModalCenter").modal('hide');
                    Limpiar();
                    
                }
            },
            error: function (err) {
                alertMessage("Error", "Error Listado Clientes", "error");
                console.log(err.fail());
            }
        });

    }

    function Limpiar() {
        $("#txtCed").val('');
        $("#txtNom").val('');
        $("#txtApe").val('');
        $("#txtTel").val('');
        $("#txtDir").val('');

    }

    function toastMessage(Mensaje) {
        Toastify({
            text: Mensaje,
            duration: 4000,
            close: true,
            gravity: "top",
            position: "center",
            backgroundColor: "#913636",
        }).showToast();
    }

    function MessageSucces(Mensaje) {
        Toastify({
            text: Mensaje,
            duration: 3000,
            close: true,
            gravity: "top",
            position: "center",
            backgroundColor: "#4fbe87",
        }).showToast();

    }
</script>