                                    <p style="color: #808080"> <b> Pinllo  </b> </p>
                                </div>
                            </div>
                        </div>

                        <div style="background-color: #3c0862 ">
                            <div class="row text-center">
                                <div class="col-12">
                                    <h5 style="color: #ffffff"> Facturar A</h5>
                                </div>
                            </div>
                        </div>

                        <div>
                            <div class="row mt-2">
                                <form class="form form-horizontal">
                                    <div class="form-body">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <label>Cliente</label>
                                            </div>
                                            <div class="col-md-9 form-group">
                                                <label id="txtCliente">  ##</label>
                                                <div class="float-end">
                                                    <a id="btnClientes" data-bs-toggle="modal" data-bs-target="#exampleModalCenter" class="btn user-img d-flex align-items-center">
